    }
    
    #contacto .text-lg {
        font-size: 0.95rem;
    }
}

/* Footer responsive */
@media (max-width: 768px) {
    footer .grid-2 {
        grid-template-columns: 1fr;
        gap: var(--space-8);
        text-align: center;
    }
    
    footer .flex.items-center {
