        font-size: 0.95rem;
    }
}

/* Proceso section responsive */
@media (max-width: 768px) {
    .pasos-grid {
        grid-template-columns: 1fr;
        gap: var(--space-6);
    }
    
    .proceso .card-light {
        padding: var(--space-6);
    }
    
    .proceso .paso-number {
        width: 40px;
