    }
}


/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-fade-in {
    animation: fadeInUp 0.6s ease-out;
}

/* Fases container responsive */
@media (max-width: 1024px) {
    .fases-container {
        grid-template-columns: 1fr;
        gap: var(--space-12);
    }
    
    .arrow-connector {
        transform: rotate(90deg);
        margin: var(--space-4) 0;
    }
    
    .arrow {
        width: 50px;
        height: 50px;
        font-size: 1.25rem;
    }
}

@media (max-width: 768px) {
    .fases-container {
        gap: var(--space-8);
    }
    
    .fase-card {
        padding: var(--space-8) var(--space-6);
    }
    
    .fase-header {
        gap: var(--space-4);
        margin-bottom: var(--space-6);
    }
    
    .fase-icon {
        width: 48px;
        height: 48px;
        font-size: 1.125rem;
    }
    
    .fase-title {
        font-size: 1.25rem;
    }
    
    .fase-description {
        font-size: 1rem;
    }
    
